button{
  width: 40%;
  display: inline;
}
.background{
  position: absolute;
  width: 100%;
  height: 100vh;
  z-index: -1;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.block{
  background: rgba(25,118,210,0.3);
  padding: 10px 20px;
  width: 80%;
  font-size: 24px;
  margin-top: 10vh;
